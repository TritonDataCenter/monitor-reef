{
  "openapi": "3.0.3",
  "info": {
    "title": "Bugview API",
    "description": "Public JIRA issue viewer API",
    "version": "0.1.0"
  },
  "paths": {
    "/bugview": {
      "get": {
        "tags": [
          "redirects"
        ],
        "summary": "Redirect /bugview to /bugview/index.html",
        "operationId": "redirect_bugview_root",
        "responses": {
          "default": {
            "description": "",
            "content": {
              "*/*": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/bugview/fulljson/{key}": {
      "get": {
        "tags": [
          "issues"
        ],
        "summary": "Get full issue details as JSON",
        "description": "Returns complete issue information including all fields.",
        "operationId": "get_issue_full_json",
        "parameters": [
          {
            "in": "path",
            "name": "key",
            "description": "Issue key (e.g., \"PROJECT-123\")",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IssueDetails"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/bugview/index.html": {
      "get": {
        "tags": [
          "html"
        ],
        "summary": "Get issue index as HTML",
        "description": "Returns a paginated HTML view of public issues.",
        "operationId": "get_issue_index_html",
        "parameters": [
          {
            "in": "query",
            "name": "next_page_token",
            "description": "Next page token for pagination (token-based, not offset)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Sort field (key, created, or updated)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "",
            "content": {
              "*/*": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/bugview/index.json": {
      "get": {
        "tags": [
          "issues"
        ],
        "summary": "Get issue index as JSON",
        "description": "Returns a paginated list of public issues.",
        "operationId": "get_issue_index_json",
        "parameters": [
          {
            "in": "query",
            "name": "next_page_token",
            "description": "Next page token for pagination (token-based, not offset)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Sort field (key, created, or updated)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IssueListResponse"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/bugview/issue/{key}": {
      "get": {
        "tags": [
          "html"
        ],
        "summary": "Get issue details as HTML",
        "description": "Returns an HTML view of a single issue with full details.",
        "operationId": "get_issue_html",
        "parameters": [
          {
            "in": "path",
            "name": "key",
            "description": "Issue key (e.g., \"PROJECT-123\")",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "",
            "content": {
              "*/*": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/bugview/json/{key}": {
      "get": {
        "tags": [
          "issues"
        ],
        "summary": "Get simplified issue details as JSON",
        "description": "Returns basic issue information without full details.",
        "operationId": "get_issue_json",
        "parameters": [
          {
            "in": "path",
            "name": "key",
            "description": "Issue key (e.g., \"PROJECT-123\")",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IssueListItem"
                }
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        }
      }
    },
    "/bugview/label/{key}": {
      "get": {
        "tags": [
          "html"
        ],
        "summary": "Get issues for a specific label as HTML",
        "description": "Returns a paginated HTML view of issues with the specified label.",
        "operationId": "get_label_index_html",
        "parameters": [
          {
            "in": "path",
            "name": "key",
            "description": "Label key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "next_page_token",
            "description": "Next page token for pagination (token-based, not offset)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "sort",
            "description": "Sort field (key, created, or updated)",
            "schema": {
              "nullable": true,
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "",
            "content": {
              "*/*": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "description": "Error information from a response.",
        "type": "object",
        "properties": {
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "request_id"
        ]
      },
      "IssueDetails": {
        "description": "Full issue details",
        "type": "object",
        "properties": {
          "fields": {
            "description": "Issue fields (structure depends on JIRA configuration)"
          },
          "key": {
            "description": "Issue key",
            "type": "string"
          }
        },
        "required": [
          "fields",
          "key"
        ]
      },
      "IssueListItem": {
        "description": "Simplified issue information for list views",
        "type": "object",
        "properties": {
          "created": {
            "description": "Creation timestamp",
            "type": "string"
          },
          "key": {
            "description": "Issue key (e.g., \"PROJECT-123\")",
            "type": "string"
          },
          "resolution": {
            "nullable": true,
            "description": "Resolution status (if resolved)",
            "type": "string"
          },
          "status": {
            "description": "Issue status (e.g., \"Open\", \"Resolved\", \"Closed\")",
            "type": "string"
          },
          "summary": {
            "description": "Issue summary/title",
            "type": "string"
          },
          "updated": {
            "description": "Last updated timestamp",
            "type": "string"
          }
        },
        "required": [
          "created",
          "key",
          "status",
          "summary",
          "updated"
        ]
      },
      "IssueListResponse": {
        "description": "Response for issue list endpoints",
        "type": "object",
        "properties": {
          "is_last": {
            "description": "True if this is the last page",
            "type": "boolean"
          },
          "issues": {
            "description": "Issues in this page (up to 50)",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IssueListItem"
            }
          },
          "next_page_token": {
            "nullable": true,
            "description": "Token for next page (None if this is the last page)",
            "type": "string"
          }
        },
        "required": [
          "is_last",
          "issues"
        ]
      }
    },
    "responses": {
      "Error": {
        "description": "Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "html"
    },
    {
      "name": "issues"
    },
    {
      "name": "redirects"
    }
  ]
}
